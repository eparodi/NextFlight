<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.example.martin.nextflight.HelpActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:text="@string/help_map_understanding_title"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="@string/help_map_cheap_deals"
                    android:textColor="@color/md_indigo_900"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/md_indigo_900"
                    android:text="@string/help_map_expensive_deals"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/md_indigo_900"
                    android:text="@string/help_map_usage"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="235dp"
                android:layout_marginStart="40dp"
                app:srcCompat="@mipmap/help_map"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:text="@string/help_search_review_title"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/md_indigo_900"
            android:text="@string/help_review_introduction"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@mipmap/help_review_phone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@color/md_indigo_900"
            android:text="@string/help_search_review"
            android:layout_marginBottom="5dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@mipmap/help_comments_phone"/>


    </LinearLayout>

</ScrollView>
