<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/flight_list_airline_id_text"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/flight_list_number_text"
        android:layout_alignBottom="@+id/flight_list_number_text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp" />

    <ImageView
        android:id="@+id/avatar_state_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/flight_list_number_text"
        android:layout_weight="1"
        android:layout_alignTop="@+id/avatar_state_image_view"
        android:layout_toStartOf="@+id/flight_list_airline_id_text"
        android:layout_marginEnd="27dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/flight_list_time_text"
        android:layout_below="@+id/flight_list_number_text"
        android:layout_alignStart="@+id/flight_list_number_text" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/flight_list_date_text"
        android:layout_below="@+id/flight_list_airline_id_text"
        android:layout_alignStart="@+id/flight_list_airline_id_text" />
</RelativeLayout>