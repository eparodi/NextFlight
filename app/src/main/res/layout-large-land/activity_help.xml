<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="com.example.martin.nextflight.HelpActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:textSize="30dp"
            android:text="@string/help_map_understanding_title"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="@string/help_map_cheap_deals"
            android:textColor="@color/md_indigo_900"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/md_indigo_900"
            android:text="@string/help_map_expensive_deals"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/md_indigo_900"
            android:text="@string/help_map_usage"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_width="700dp"
            android:layout_height="350dp"
            android:layout_marginStart="200dp"
            app:srcCompat="@mipmap/help_map_tablet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:textSize="30dp"
            android:text="@string/help_search_review_title"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/md_indigo_900"
            android:text="@string/help_review_introduction"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_width="700dp"
            android:layout_height="350dp"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="25dp"
            app:srcCompat="@mipmap/help_review_search_tablet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/md_indigo_900"
            android:text="@string/help_search_review"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_width="700dp"
            android:layout_height="300dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@mipmap/help_review_tablet"/>


    </LinearLayout>

</ScrollView>
